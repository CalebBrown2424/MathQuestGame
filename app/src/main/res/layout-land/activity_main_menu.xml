<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathquestmainmenubackground1__1_">

    <ImageButton
        android:id="@+id/StartGameButton"
        android:layout_width="299dp"
        android:layout_height="117dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554"
        app:srcCompat="@drawable/game_assets_wood_gui_game_button_86036700__1__removebg_preview" />

    <ImageButton
        android:id="@+id/ExitGameButton"
        android:layout_width="270dp"
        android:layout_height="112dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.817"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946"
        app:srcCompat="@drawable/game_assets_wood_gui_game_button_86036700__1__removebg_preview" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="268dp"
        android:layout_height="81dp"
        android:fontFamily="@font/metamorphous"
        android:gravity="center"
        android:text="@string/StartGameText"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/StartGameButton"
        app:layout_constraintEnd_toEndOf="@+id/StartGameButton"
        app:layout_constraintStart_toStartOf="@+id/StartGameButton"
        app:layout_constraintTop_toTopOf="@+id/StartGameButton" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="259dp"
        android:layout_height="73dp"
        android:fontFamily="@font/metamorphous"
        android:gravity="center"
        android:text="@string/ExitGameMainText"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ExitGameButton"
        app:layout_constraintEnd_toEndOf="@+id/ExitGameButton"
        app:layout_constraintStart_toStartOf="@+id/ExitGameButton"
        app:layout_constraintTop_toTopOf="@+id/ExitGameButton" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="454dp"
        android:layout_height="221dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mathquestlogo2" />


</androidx.constraintlayout.widget.ConstraintLayout>